<BorderPane fx:id="pantallaCategorias" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CategoriasController">
   <top>
      <VBox alignment="CENTER" prefHeight="61.0" prefWidth="602.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefHeight="80.0" prefWidth="602.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Categorias">
                     <font>
                        <Font size="28.0" />
                     </font>
                  </Text>
               </children>
            </VBox>
         </children>
      </VBox>
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="14.0" prefWidth="602.0">
               <children>
                  <ToolBar prefHeight="40.0" prefWidth="200.0">
                    <items>
                      <Button mnemonicParsing="false" onAction="#addCategoria" text="Añadir Categoría" />
                        <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#deleteCategoria" text="Eliminar Categoría" />
                    </items>
                  </ToolBar>
               </children>
            </VBox>
            <VBox>
               <children>
                  <TableView>
                    <columns>
                      <TableColumn prefWidth="227.20001828670502" text="Nombre" />
                      <TableColumn prefWidth="372.7998962402344" text="Descripcion" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
